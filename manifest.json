{
  "manifest_version": 3,
  "name": "Word Extractor",
  "version": "1.0",
  "description": "Detects word under cursor on ctrl+i and copies it with a suffix to the clipboard.",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+I",
        "mac": "Command+I"
      },
      "description": "Extract word under cursor"
    }
  }
}
